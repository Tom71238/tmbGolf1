<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tbrey1gmail.tmbgolf.View.gcDetailsWithPlayers"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/tvCourseNameID"
        android:layout_width="392dp"
        android:layout_height="31dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:editable="false"
        android:ems="10"
        android:hint="Golf Course Name"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvDateOfRound_lbl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateOfRound_lbl"
        android:layout_width="168dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:editable="false"
        android:text="Date of Round"
        android:textAlignment="viewEnd"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/etDateID"
        app:layout_constraintEnd_toStartOf="@+id/etDateID"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/etDateID"
        android:layout_width="178dp"
        android:layout_height="25dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="date"
        android:textAppearance="@android:style/TextAppearance.Material.Small"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCourseNameID"
        tools:text="mm/dd/yy" />


    <TextView
        android:id="@+id/tvTeesPlayed_lbl"
        android:layout_width="126dp"
        android:layout_height="29dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="16dp"
        android:text="Tees Played"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvCourseSlope_lbl"
        app:layout_constraintEnd_toStartOf="@+id/tvCourseSlope_lbl"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/tvCourseRating_lbl"
        android:layout_width="127dp"
        android:layout_height="27dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Course Rating"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tvCourseSlope_lbl"
        app:layout_constraintTop_toBottomOf="@+id/tvDateOfRound_lbl" />

    <EditText
        android:id="@+id/etSlopeID"
        android:layout_width="99dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Slope"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/etRatingID"
        app:layout_constraintEnd_toEndOf="@+id/tvCourseSlope_lbl"
        app:layout_constraintStart_toStartOf="@+id/tvCourseSlope_lbl"
        app:layout_constraintTop_toBottomOf="@+id/tvCourseSlope_lbl" />

    <TextView
        android:id="@+id/tvCourseSlope_lbl"
        android:layout_width="104dp"
        android:layout_height="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="24dp"
        android:text="Course Slope"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvCourseRating_lbl"
        app:layout_constraintEnd_toStartOf="@+id/tvCourseRating_lbl"
        app:layout_constraintStart_toEndOf="@+id/tvTeesPlayed_lbl" />

    <EditText
        android:id="@+id/etRatingID"
        android:layout_width="101dp"
        android:layout_height="38dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Rating"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/tvCourseRating_lbl"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvCourseRating_lbl"
        app:layout_constraintTop_toBottomOf="@+id/tvCourseRating_lbl" />

    <EditText
        android:id="@+id/etHoleNumber_"
        android:layout_width="0dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:text="01 02 03 04 05 06 07 08 09 10 11 12 13 14 15 16 17 18"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHole_lbl" />

    <EditText
        android:id="@+id/etHoleParsID"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:text="03 03 03 03 05 05 05 05 04 04 04 04 04 04 04 04 04 04"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVtvPar_lbl" />

    <EditText
        android:id="@+id/etHoleHandicapID"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:fontFamily="serif-monospace"
        android:text="01 02 03 04 05 06 07 08 09 10 11 12 13 14 15 16 17 18"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHdc_lbl" />

    <TextView
        android:id="@+id/tvPlayer_lbl"
        android:layout_width="126dp"
        android:layout_height="21dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Player"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvHDCindex_lbl"
        app:layout_constraintEnd_toStartOf="@+id/tvHDCindex_lbl"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvHDCindex_lbl"
        android:layout_width="126dp"
        android:layout_height="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="24dp"
        android:text='Handicap Index"'
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tvHandicapDiff_lbl"
        app:layout_constraintTop_toBottomOf="@+id/etHoleHandicapID" />

    <TextView
        android:id="@+id/tvHandicapDiff_lbl"
        android:layout_width="127dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:text="Handicap Differential"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvHDCindex_lbl"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etPlayer1nameID"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:ems="10"
        android:hint="Player 1"
        android:inputType="none|textCapCharacters|textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etP1HdcIdxID"
        app:layout_constraintEnd_toEndOf="@+id/tvPlayer_lbl"
        app:layout_constraintStart_toStartOf="@+id/tvPlayer_lbl" />

    <EditText
        android:id="@+id/etPlayer2nameID"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Player 2"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/etPlayer1nameID"
        app:layout_constraintStart_toStartOf="@+id/etPlayer1nameID"
        app:layout_constraintTop_toBottomOf="@+id/etPlayer1nameID" />

    <EditText
        android:id="@+id/etPlayer3nameID"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Player 3"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/etPlayer2nameID"
        app:layout_constraintStart_toStartOf="@+id/etPlayer2nameID"
        app:layout_constraintTop_toBottomOf="@+id/etPlayer2nameID" />

    <EditText
        android:id="@+id/etPlayer4nameID"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Player 4"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/etPlayer3nameID"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/etPlayer3nameID"
        app:layout_constraintTop_toBottomOf="@+id/etPlayer3nameID" />

    <Button
        android:id="@+id/btnScoreRoundID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Score Round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPlayer4nameID" />

    <TextView
        android:id="@+id/tvHole_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:text="Hole:"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinTeesPlayedID" />

    <TextView
        android:id="@+id/textVtvPar_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Par"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tvHole_lbl"
        app:layout_constraintTop_toBottomOf="@+id/etHoleNumber_" />

    <TextView
        android:id="@+id/tvHdc_lbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Hdc"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/textVtvPar_lbl"
        app:layout_constraintTop_toBottomOf="@+id/etHoleParsID" />

    <EditText
        android:id="@+id/etP1HdcIdxID"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="5.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/tvHDCindex_lbl"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="@+id/tvHDCindex_lbl"
        app:layout_constraintTop_toBottomOf="@+id/tvHDCindex_lbl" />

    <EditText
        android:id="@+id/etP1HdcDiffID"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="25.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etP1HdcIdxID"
        app:layout_constraintEnd_toEndOf="@+id/tvHandicapDiff_lbl"
        app:layout_constraintStart_toStartOf="@+id/tvHandicapDiff_lbl" />

    <EditText
        android:id="@+id/etP2HdcIdxID"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:ems="10"
        android:hint="5.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etPlayer2nameID"
        app:layout_constraintEnd_toEndOf="@+id/tvHDCindex_lbl"
        app:layout_constraintHorizontal_bias="0.133"
        app:layout_constraintStart_toStartOf="@+id/tvHDCindex_lbl" />

    <EditText
        android:id="@+id/etP2HdcDiffID"
        android:layout_width="94dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="25.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etP2HdcIdxID"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etP1HdcDiffID" />

    <EditText
        android:id="@+id/etP3HdcIdxID"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:ems="10"
        android:hint="5.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etPlayer3nameID"
        app:layout_constraintEnd_toEndOf="@+id/tvHDCindex_lbl"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="@+id/tvHDCindex_lbl" />

    <EditText
        android:id="@+id/etP3HdcDiffID"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:ems="10"
        android:hint="25.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etP3HdcIdxID"
        app:layout_constraintEnd_toEndOf="@+id/etP2HdcDiffID"
        app:layout_constraintStart_toStartOf="@+id/etP2HdcDiffID" />

    <EditText
        android:id="@+id/etP4HdcIdxID"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:ems="10"
        android:hint="5.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etPlayer4nameID"
        app:layout_constraintEnd_toEndOf="@+id/tvHDCindex_lbl"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tvHDCindex_lbl" />

    <EditText
        android:id="@+id/etP4HdcDiffID"
        android:layout_width="94dp"
        android:layout_height="41dp"
        android:layout_marginRight="16dp"
        android:ems="10"
        android:hint="25.0"
        android:inputType="number"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/etP4HdcIdxID"
        app:layout_constraintEnd_toEndOf="@+id/etP3HdcDiffID"
        app:layout_constraintHorizontal_bias="0.17"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/etP3HdcDiffID" />

    <Spinner
        android:id="@+id/spinTeesPlayedID"
        android:layout_width="141dp"
        android:layout_height="23dp"

        android:layout_marginLeft="16dp"
        android:entries="@array/tee_array"
        android:prompt="@string/tee_prompt"
        app:layout_constraintBaseline_toBaselineOf="@+id/etSlopeID"
        app:layout_constraintEnd_toEndOf="@+id/tvTeesPlayed_lbl"


        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvTeesPlayed_lbl" />

</android.support.constraint.ConstraintLayout>
